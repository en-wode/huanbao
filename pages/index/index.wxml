<!--index.wxml-->
<import src="../../dist/field/index.wxml" />
<view class="container">
  <view class="userinfo">
    <text class="user-motto" bindtap="adddevice" >{{motto}}</text>
    <form bindsubmit="formSubmit" bindreset="formReset">
      <view class="zan-panel">
        <template
          is="zan-field"
          data="{{ ...base.name, name}}"></template>
        <template
          is="zan-field"
          data="{{ ...base.password, password}}"></template>
      </view>
      <view class='editpassword' bindtap='editpassword'>修改密码</view>
       <button
          class="zan-btn"
          formType="submit">登录</button>
      </form>
  </view>
  <view class="usermotto">
    <text class="user-motto tip" >{{tip}}</text>
  </view>
</view>
