<!--pages/optionSelect/optionSelect.wxml-->
<view class="option-contain">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
    <block wx:else>
      <image  class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
  <view class="usermotto">
    <view class="zan-row option-bottom">
        <view class="zan-col zan-col-12" bindtap='optionSelect' id='1'>
          <view class="iconfont icon-shuizha de-detail" ></view>
          设备详情
        </view>
        <view class="zan-col zan-col-12" bindtap='optionSelect' id='2'>
          <view class="iconfont icon-shezhi de-caozuo" ></view>
          设备操作
        </view>
        <view class="zan-col zan-col-12" bindtap='optionSelect' id='3'>
          <view class="iconfont icon-video-surveillance de-check" ></view>
          场景模拟
        </view>
        <view class="zan-col zan-col-12" bindtap='optionSelect' id='4'>
          <view class="iconfont icon-xitongzhuangtai de-history" ></view>
          历史数据
        </view>
      </view>
  </view>
</view>
