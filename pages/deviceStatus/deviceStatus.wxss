page{
  background: #f3f3f3;
  font-family:-apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,sans-serif;
  color: #000;
}

/* 卡片即头部样式 */
.card{
  background: #fff;
  font-size: 30rpx;
  padding: 0 0 12rpx 0; 
  margin-bottom: 18rpx;
  font-weight: 500
}
.card_num{
  background: #fff;
  font-size: 30rpx;
  margin-bottom: 8rpx;
  font-weight: 500
}
.card_contain{
  width: 90%;
  margin: 0 auto;
  padding-bottom: 8rpx;
  font-weight:500;
  padding:12rpx 0;
  font-size:34rpx;
}
.card_title{
  width: 90%;
  margin: 0 auto;
  padding-bottom: 8rpx;
  border-bottom: 6rpx solid #f3f3f3;
  font-weight: bolder;
  padding: 12rpx 0;
}
.bdline{
  border-right: 1px solid #ccc
}
.card_val{
  min-width: 168rpx;
  text-align: center!important;
}
.card_name{
  font-size: 32rpx;
  font-weight: 500
}
/* 卡片内部字体颜色 */
.card_status{
  color: #47aef3;
}
.card_status_name{
  margin-top: 8rpx;
  color: #5f5f5f;
  font-size: 26rpx
}
.zan-cell__ft{
