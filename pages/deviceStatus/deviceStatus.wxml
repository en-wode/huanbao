<!--pages/deviceStatus/deviceStatus.wxml-->
<view>
  <view class='card_num'>
     <view class="zan-cell">
        <view class="zan-cell__bd card_name" >井内水位：</view>
        <view class="zan-cell__ft card_val">12米</view>
      </view>
  </view>
  <view class='card_num'>
      <view class="zan-cell">
        <view class="zan-cell__bd card_name">河道水位：</view>
        <view class="zan-cell__ft card_val">12米</view>
      </view>
  </view>
  <view class='card'>
    <view class='card_title'>
      <view class="iconfont icon-shuilongtou" ></view>排水阀开度 30%
    </view>
    <view class="section section_gap">
      <view class="body-view">
           <wxc-progress percent="30" active-color="#33ccff,#3399ff"></wxc-progress>
      </view>
    </view>
  </view>
  <view class='card'>
    <view class='card_title'>
      <view class="iconfont icon-shuilongtou1" ></view>截污阀开度 60%
    </view>
    <view class="section section_gap">
      <view class="body-view">
           <wxc-progress percent="60" active-color="#33ccff,#3399ff"></wxc-progress>
      </view>
    </view>
  </view>
  <view class='card'>
    <view class='card_title'>
      <view class="iconfont icon-jishuidian" ></view>垃圾高度 100%
    </view>
    <view class="section section_gap">
      <view class="body-view">
           <wxc-progress percent="100" active-color="#33ccff,#3399ff"></wxc-progress>
      </view>
    </view>
  </view>
  <view class='card_num'>
     <view class="zan-cell">
        <view class="zan-cell__bd card_name" >COD浓度：</view>
        <view class="zan-cell__ft card_val">32%</view>
      </view>
  </view>
  <view class='card_num'>
     <view class="zan-cell">
        <view class="zan-cell__bd card_name" >SS悬浮物：</view>
        <view class="zan-cell__ft card_val">22</view>
      </view>
  </view>
  <view class='card_num'>
     <view class="zan-cell">
        <view class="zan-cell__bd card_name" >系统压力：</view>
        <view class="zan-cell__ft card_val">22Mpa</view>
      </view>
  </view>
  <view class='card_num'>
     <view class="zan-cell">
        <view class="zan-cell__bd card_name" >污水累计流量：</view>
        <view class="zan-cell__ft card_val">120m³/h</view>
      </view>
  </view>
   <view class='card'>
     <view class='card_title'>
      <view class="iconfont icon-qiwen-" ></view>天气情况
    </view>
      <view class="weather">
        <view >
          {{weatherData[0].date}}
          {{weatherData[0].weather}} 
          {{weatherData[0].temperature}} 
        </view>
        <view >
          {{weatherData[1].date}}
          {{weatherData[1].weather}}
          {{weatherData[1].temperature}}
        </view>
        <view >
          {{weatherData[2].date}}
          {{weatherData[2].weather}}
          {{weatherData[2].temperature}}
        </view>
          
      </view>
  </view>
  <view class='card'>
    <view class='card_title'>
      <view class="iconfont icon-open-eye" ></view>监控
    </view>
    <view class='zan-row monitor'>
        <view class="zan-col zan-col-12" bindtap='monitor' id='1'>井内监控</view>
        <view class="zan-col zan-col-12" bindtap='monitor' id='2'>井外监控</view>
    </view>
  </view>
</view>
