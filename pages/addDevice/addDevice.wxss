/* pages/addDevice/addDevice.wxss */
page{
  background: #f3f3f3;
}
.addmore{
  display:flex;
  flex-direction:column;
  align-items:center;
}
.addmore_rad{
  width: 188rpx;
  height: 188rpx;
  border-radius: 50%;
  background: #518cf6;
  color: white;
  text-align: center;
  line-height: 188rpx;
  margin-top: 388rpx;
}
.tip_title{
  font-size: 24rpx;
  color: #999;
  position: absolute;
  bottom: 80rpx;
  text-align: center;
  left: 0;
  right: 0;
}

.item-box{
    margin: 0 auto;
    padding: 12rpx 0;
}

.items{
    width: 100%;
}

.item{
    position:relative;
    border-top:2rpx solid#eee;
    height:90rpx;
    line-height:90rpx;
    overflow:hidden;
    background:white;
    font-size:32rpx;

}

.item:last-child{

    border-bottom: 2rpx solid#eee;

}

.inner{
    position: absolute;
    top:0;
}

.inner.txt{
    background-color: #fff;
    width: 100%;
    z-index: 5;
    padding:0 0rpx 0 20rpx;
    transition: left0.2s ease-in-out;
    white-space:nowrap;
    overflow:hidden;
    text-overflow:ellipsis;
}
.inner.del{
    background-color: #e64340;
    width: 180rpx;text-align: center;
    z-index: 4;
    right: 0;
    color: #fff

}
.item-icon{
    width: 64rpx;
    vertical-align: middle;
    margin-right: 16rpx
}