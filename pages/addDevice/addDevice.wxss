/* pages/addDevice/addDevice.wxss */
page{
  background: #f3f3f3;
}
.addmore{
  display:flex;
  flex-direction:column;
  align-items:center;
}
.addmore_rad{
  width: 188rpx;
  height: 188rpx;
  border-radius: 50%;
  background: #518cf6;
  color: white;
  text-align: center;
  line-height: 188rpx;
  margin-top: 388rpx;
}

.tip_title{
  font-size: 24rpx;
  color: #999;
  position: absolute;
  bottom: 80rpx;
  text-align: center;
  left: 0;
  right: 0;
}
.weather{
  font-size: 24rpx;
  margin-left: 14rpx;
  color: #7A7A7A
}
.condition{
  float: right;
  font-size: 24rpx;
  color: #7CCD7C
}
.item-box{
    margin: 0 auto;
    padding: 12rpx 0;
}

.items{
    width: 100%;
}

.item{
    position:relative;
    border-top:2rpx solid#eee;
    height:90rpx;
    line-height:90rpx;
    overflow:hidden;
    background:white;
    font-size:32rpx;

}
.list-detail{
  width:90%;
  display:inline-block;
}
.item:last-child{

    border-bottom: 2rpx solid#eee;

}

.inner{
    position: absolute;
    top:0;
}

.inner.txt{
    background-color: #fff;
    width: 100%;
    z-index: 5;
    padding:0 0rpx 0 20rpx;
    transition: left0.2s ease-in-out;
    white-space:nowrap;
    overflow:hidden;
    text-overflow:ellipsis;
}
.inner.del{
    background-color: #e64340;
    width: 180rpx;text-align: center;
    z-index: 4;
    right: 0;
    color: #fff

}
.item-icon{
    width: 64rpx;
    vertical-align: middle;
    margin-right: 16rpx
}

radio {
  transform:scale(0.9);
}
.radio-group{
  width: 90%;
  margin: 24rpx auto;
  font-size: 26rpx;
  color: #383838;
}
.list-radio{
  margin-top: 24rpx
}
/* 卡片即头部样式 */
.card{
  background: #fff;
  font-size: 30rpx;
  padding: 0 0 12rpx 0;
  margin-bottom: 18rpx;
  font-weight: 500
}
.card_title{
  width: 90%;
  margin: 0 auto;
  padding-bottom: 8rpx;
  border-bottom: 4rpx solid #f3f3f3;
  font-weight: bolder;
  padding: 12rpx 0;
}
.switch{
  padding: 0 15px;
}
/* 卡片内部字体颜色 */
.card_status{
  color: #47aef3;
}
.card_status_name{
  margin-top: 8rpx;
  color: #5f5f5f;
  font-size: 26rpx
}
/* 工作指示灯 */
.zan-col{
  padding: 12rpx;
  text-align: center;
}
.zan-icon{
  margin-right: 10rpx;
  font-size: 30rpx;
}
.iconfont{
